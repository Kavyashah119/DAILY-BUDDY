<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:id="@+id/card_view"
        app:cardElevation="4dp"
        app:cardCornerRadius="10dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/btn_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"/>

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="24sp"
                android:layout_toRightOf="@id/btn_radio"
                android:padding="8dp" />

            <TextView
                android:id="@+id/txt_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="20sp"
                android:layout_below="@id/txt_title"
                android:padding="8dp"
                android:layout_marginLeft="55dp"
                android:layout_marginBottom="3dp"/>


            <ImageButton
                android:id="@+id/edit_btn"
                android:src="@drawable/ic_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/due_time_display"
                android:layout_margin="15dp"
                android:background="#fff"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/due_time_display"
                android:layout_marginStart="319dp"
                android:layout_margin="15dp"
                android:layout_alignParentEnd="true"
                android:background="#fff"
                android:src="@drawable/ic_delete"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/reminder_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/reminder"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/due_date_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_calendar_today_24"
                android:background="#fff"
                android:layout_marginTop="95dp"
                android:layout_marginLeft="60dp"
                android:padding="8dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/due_date_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_description"
                android:textSize="20sp"
                android:layout_marginLeft="100dp"
                android:text="xyzdckmd"
                android:padding="6dp"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/due_time_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_alarm_24"
                android:background="#fff"
                android:layout_below="@id/due_date_icon"
                android:layout_marginLeft="68dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/due_time_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vvmssac"
                android:layout_below="@id/due_date_display"
                android:textSize="20sp"
                android:layout_marginLeft="100dp"
                android:padding="6dp"
                android:visibility="gone"/>

        </RelativeLayout>
</androidx.cardview.widget.CardView>
