<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditOption"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/title_edt"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:enabled="false"
            android:textColor="@color/colorWhite"/>

        <EditText
            android:id="@+id/des_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="30sp"
            android:layout_below="@id/title_edt"
            android:focusable="true"
            android:textColor="@color/colorWhite"/>

        <EditText
            android:id="@+id/pick_a_date"
            android:layout_width="282dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@id/des_edt"
            android:hint="Pick a date"
            android:textSize="25sp"
            android:clickable="true"
            android:focusable="false"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorTextHint"/>

        <ImageView
            android:id="@+id/calendar"
            android:layout_width="97dp"
            android:layout_height="91dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="-62dp"
            android:layout_marginBottom="15dp"
            android:layout_toStartOf="@id/pick_a_date"
            android:src="@drawable/calendar"/>

        <EditText
            android:id="@+id/select_time"
            android:layout_width="282dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/pick_a_date"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="10dp"
            android:hint="Pick a time"
            android:textColorHint="@color/colorTextHint"
            android:textSize="25sp"
            android:clickable="true"
            android:focusable="false"
            android:textColor="@color/colorWhite"/>

        <ImageView
            android:id="@+id/time_imgview"
            android:layout_width="97dp"
            android:layout_height="91dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="-62dp"
            android:layout_toStartOf="@id/select_time"
            android:src="@drawable/alarm" />

        <ImageView
            android:id="@+id/set_reminder_icon"
            android:layout_width="54dp"
            android:layout_height="71dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="330dp"
            android:src="@drawable/notifyme" />

        <EditText
            android:id="@+id/set_reminder"
            android:layout_width="282dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/select_time"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="10dp"
            android:hint="Remind me"
            android:textColorHint="@color/colorTextHint"
            android:textSize="25sp"
            android:clickable="true"
            android:focusable="false"
            android:textColor="@color/colorWhite"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_done_24"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp"/>

    </RelativeLayout>
</LinearLayout>